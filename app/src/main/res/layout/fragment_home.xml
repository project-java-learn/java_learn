<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="@dimen/top_level_padding"
  tools:context=".view.HomeFragment"
  >
  <android.support.v7.widget.CardView
    style="@style/cardView"
    android:layout_width="700dp"
    android:layout_height="850dp"
    android:layout_centerInParent="true">

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">

      <ImageView
        android:id="@+id/logo_home"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/java_learn_logo"/>

      <ImageSwitcher
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
          android:id="@+id/icon_image_home"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@drawable/ic_person"
          />
      </ImageSwitcher>

      <Button
        android:id="@+id/levels_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle20"
        android:padding="10dp"
        android:background="@drawable/my_button"
        android:layout_margin="12dp"
        android:text="Levels"
        />

      <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle20"
        android:padding="10dp"
        android:background="@drawable/my_button"
        android:layout_margin="12dp"
        android:text="Profile"
        />


    </LinearLayout>


  </android.support.v7.widget.CardView>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fabSignOut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/darkColor"
    android:src="@drawable/ic_home"
    app:fabCustomSize="60dp"
    app:fabSize="auto"
    app:maxImageSize="40dp"/>
</RelativeLayout>