<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="@dimen/top_level_padding"
  tools:context=".view.HomeFragment"
  >
  <android.support.v7.widget.CardView
    style="@style/cardView"
    android:layout_width="550dp"
    android:layout_height="550dp"
    android:layout_centerInParent="true">

    <android.support.constraint.ConstraintLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <TextView
        android:id="@+id/java_header"
        style="@style/TextViewStyle50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="JAVA"
        app:layout_constraintBottom_toTopOf="@id/user_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/alegreya_black"/>

      <TextView
        android:id="@+id/learn_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/user_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/java_header"
        tools:fontFamily="@font/cutive_mono"/>

      <ImageSwitcher
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/java_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/levels_button"
        >

        <ImageView
          android:id="@+id/icon_image_home"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_person"
          />
      </ImageSwitcher>

      <Button
        android:id="@+id/levels_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_button"
        android:text="Levels"
        />

      <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        app:layout_constraintTop_toBottomOf="@id/levels_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glossary_button"
        android:text="Profile"
        />

      <Button
        android:id="@+id/glossary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        app:layout_constraintTop_toBottomOf="@id/profile_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Glossary"
        />

    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</RelativeLayout>