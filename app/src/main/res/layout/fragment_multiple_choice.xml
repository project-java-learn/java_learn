<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/top_level_padding"
  tools:context=".MultipleChoice">

  <ImageView
    android:id="@+id/snip_of_code"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:padding="20sp"
    android:src="@drawable/snip_of_code"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20sp"
    android:layout_toRightOf="@+id/snip_of_code"
    android:layout_alignParentRight="true">

    <TextView
      android:id="@+id/question_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Question number 1"
      android:layout_gravity="center"
      />

    <RadioGroup
      android:id="@+id/radios_one"
      android:padding="20sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:inputType="text"
      >
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="answer A"
      />
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="answer B"
      />
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="answer C"
      />
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Answer D"
      />

    </RadioGroup>

    <TextView
      android:id="@+id/question_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Question number 1"
      />

    <RadioGroup
      android:id="@+id/radios_two"
      android:padding="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:inputType="text"
      >
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer A"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer B"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer C"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer D"
        />

    </RadioGroup>

    <TextView
      android:id="@+id/question_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Question number 1"
      />

    <RadioGroup
      android:id="@+id/radios_three"
      android:padding="20sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:inputType="text"
      >
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer A"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer B"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer C"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer D"
        />

    </RadioGroup>

    <TextView
      android:id="@+id/question_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Question number 1"
      />

    <RadioGroup
      android:id="@+id/radios_four"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:inputType="text"
      android:padding="20sp"
      >
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer A"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer B"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer C"
        />
      <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer D"
        />

    </RadioGroup>

  </LinearLayout>

</RelativeLayout>