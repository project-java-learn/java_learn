<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextViewStyle">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextViewStyleMedium">
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextViewStyleSmall">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="cardView" parent="Widget.MaterialComponents.CardView">
    <item name="android:padding">40dp</item>
    <item name="android:animateLayoutChanges">true</item>
    <item name="cardCornerRadius">10dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="cardElevation">2dp</item>
    <item name="android:translationZ">8dp</item>
    <item name="cardUseCompatPadding">true</item>
    <item name="cardBackgroundColor">@color/colorAccent</item>
  </style>

  <style name="Mermain" parent="AppTheme">
    <item name="android:colorBackground">@color/background_material_light</item>
    <item name="android:colorForeground">@color/foreground_material_light</item>
    <item name="android:navigationBarColor">@color/colorNavigationBar</item>
    <item name="android:textColorPrimary">@color/text_color_primary</item>
  </style>


</resources>
