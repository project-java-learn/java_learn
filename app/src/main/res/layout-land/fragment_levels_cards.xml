<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".view.LevelsFragment">

  <ImageView
    android:id="@+id/logo_levels"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintRight_toRightOf="parent"
    android:src="@drawable/java_learn_logo_circle"/>

    <android.support.v7.widget.CardView
      android:id="@+id/highlight_card"
      style="@style/cardView"
      android:layout_width="400dp"
      android:layout_height="275dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toLeftOf="@id/fill_in_card"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@id/definitions_card"
      >

      <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
          android:id="@+id/basic_level_one"
          style="@style/TextViewStyleMedium"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Basic Level 1"
          />

        <TextView
          android:id="@+id/game_title_highlight"
          style="@style/TextViewStyle50"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="Highlight"
          />

      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/fill_in_card"
      style="@style/cardView"
      android:layout_width="400dp"
      android:layout_height="275dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@id/highlight_card"
      app:layout_constraintBottom_toTopOf="@id/multiple_choice_card">

      <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
          android:id="@+id/basic_level_two"
          style="@style/TextViewStyleMedium"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Basic Level 2"
          />

        <TextView
          android:id="@+id/game_title_fill_in"
          style="@style/TextViewStyle50"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="Fill In The Blank"
          />


      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/definitions_card"
      style="@style/cardView"
      android:layout_width="400dp"
      android:layout_height="275dp"
      app:layout_constraintTop_toBottomOf="@id/highlight_card"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/multiple_choice_card"
      app:layout_constraintBottom_toBottomOf="parent">

      <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
          android:id="@+id/basic_level_three"
          style="@style/TextViewStyleMedium"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Basic Level 3"
          />

        <TextView
          android:id="@+id/game_title_definition"
          style="@style/TextViewStyle50"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="Definitions"
          />

      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/multiple_choice_card"
      style="@style/cardView"
      android:layout_width="400dp"
      android:layout_height="275dp"
      app:layout_constraintTop_toBottomOf="@id/fill_in_card"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@id/definitions_card"
      app:layout_constraintBottom_toBottomOf="parent">

      <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
          android:id="@+id/basic_level_four"
          style="@style/TextViewStyleMedium"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Basic Level 4"
          />

        <TextView
          android:id="@+id/game_title_multiple"
          style="@style/TextViewStyle50"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:text="Multiple Choice"
          />

      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

  </android.support.constraint.ConstraintLayout>

